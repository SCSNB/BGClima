{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=bgclima;Username=postgres;Password=admin"
  },

  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters-for-jwt-signing",
    "Issuer": "BGClima",
    "Audience": "BGClimaUsers",
    "ExpirationHours": "24"
  },

  "AzureStorage": {
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=bgclimastore;AccountKey=${AZURE_STORAGE_KEY};EndpointSuffix=core.windows.net",
    "Container": "product-images"
  },

  "LocalStorage": {
    "UploadPath": "wwwroot/uploads/images",
    "BaseUrl": "/uploads/images"
  }
}
